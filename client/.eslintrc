{
  "env": {
    "browser": true,
    "node": true,
    "jquery": true,
    "jest": true
  },
  "extends": [
    "react-app",
    "react-app/jest"
  ],
  "globals": {},
  "parserOptions": {
    "ecmaVersion": 2020,
    "sourceType": "module"
  },
  "rules": {
    "indent": [
      "error",
      2
    ],
    "linebreak-style": [
      "error",
      "unix"
    ],
    "quotes": [
      "error",
      "double"
    ],
    "semi": [
      "error",
      "always"
    ],
    "no-unused-vars": [
      1,
      {
        "ignoreRestSiblings": true,
        "argsIgnorePattern": "res|next|^err"
      }
    ]
  }
}
